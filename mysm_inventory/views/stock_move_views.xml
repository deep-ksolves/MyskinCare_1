<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_move_operations_inherit_stock" model="ir.ui.view">
        <field name="name">stock.move.view.form.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@special='cancel'][1]" position="after">
                <button string="Generate Lot/Serial Number"
                    name="generate_lot_serial_number" type="object" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>
