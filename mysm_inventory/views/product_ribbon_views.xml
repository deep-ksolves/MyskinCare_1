<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_ribbon_form_view" model="ir.ui.view">
        <field name="name">product.ribbon form view</field>
        <field name="model">product.ribbon</field>
        <field name="inherit_id" ref="website_sale.product_ribbon_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='text_color']" position="after">
                <field name="is_lot_ribbon" />
            </xpath>
        </field>
    </record>

    <record id="product_ribbon_view_tree_mysm" model="ir.ui.view">
        <field name="name">product.ribbon.tree.mysm</field>
        <field name="model">product.ribbon</field>
        <field name="arch" type="xml">
            <tree string="Products Ribbon">
                <field name="html" string="Name"/>
                <field name="html_class" string="Ribbon Class"/>
            </tree>
        </field>
    </record>

    <record id="product_ribbon_action" model="ir.actions.act_window">
        <field name="name">Product Ribbon</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.ribbon</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Define a new ribbon
          </p>
        </field>
    </record>
</odoo>