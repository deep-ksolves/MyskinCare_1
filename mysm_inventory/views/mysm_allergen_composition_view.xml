<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mysm_allergen_composition_view_tree" model="ir.ui.view">
        <field name="name">mysm.allergen.composition.view.tree</field>
        <field name="model">mysm.allergen.composition</field>
        <field name="arch" type="xml">
            <tree string="Allergen Composition" editable='bottom'>
                <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="allergen_id" />
                <field name="percentage"/>
            </tree>
        </field>
    </record>

    <record id="mysm_allergen_composition_action" model="ir.actions.act_window">
        <field name="name">Allergen Composition</field>
        <field name="res_model">mysm.allergen.composition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="mysm_products_allergen_composition_menu"
        name="Allergen Composition"
        action="mysm_allergen_composition_action"
        parent="stock.menu_stock_inventory_control"
        sequence="10"/>
</odoo>
