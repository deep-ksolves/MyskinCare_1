<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mysm_report_invoice_document" name="mysm_invoice_document">
        <div class='container'>
            <div class="row">
                <div class='col-5 pl-0 pt5'>
                    <p class="pl-2 mb-0" style='background-color: #4230B2;color: white'>
                        <b scope="col">BILL TO</b>
                    </p>
                    <t t-set="partner_id" t-value="o.partner_id"/>
                    <div class='pl-2'>
                        <p class="mb-0">
                            <t t-esc="partner_id.name"/>
                        </p>
                        <p class="mb-0">
                            <t t-if="partner_id.child_ids">
                                <t t-esc="partner_id.child_ids[0].name"/>
                            </t>
                        </p>
                        <p class="mb-0">
                            <t t-esc="partner_id.street"/>
                            <t t-if="partner_id.street2">
                                    - <t t-esc="partner_id.street2"/>
                            </t>
                        </p>
                        <p class="mb-0">
                            <t t-esc="partner_id.city"/>
                            <t t-if="partner_id.state_id">
                                - <t t-esc="partner_id.state_id.name"/>
                            </t>
                            <t t-if="partner_id.zip">
                                - <t t-esc="partner_id.zip"/>
                            </t>
                        </p>
                        <p class="mb-0"><t t-esc="partner_id.phone"/></p>
                        <p class="mb-0"><t t-esc="partner_id.vat"/></p>
                    </div>
                </div>
                <div class='col-2'/>
                <div class='col-5 pr-0'>
                    <p class="pl-2 mb-0" style='background-color: #4230B2;color: white'>
                        <b>SHIP TO</b>
                    </p>
                    <t t-set="company_id" t-value="user.company_id"/>
                    <t t-if="company_id">
                        <div class='pl-2'>
                            <p class="mb-0">
                                <t t-esc="company_id.name"/>
                            </p>
                            <p class="mb-0">
                                <t t-if="company_id.child_ids">
                                    <td><t t-esc="company_id.child_ids[0].name"/></td>
                                </t>
                            </p>
                            <p class="mb-0">
                                <t t-esc="company_id.street"/>
                                <t t-if="company_id.street2">
                                    - <t t-esc="company_id.street2"/>
                                </t>
                            </p>
                            <p class="mb-0">
                                <t t-esc="company_id.city"/>
                                <t t-if="company_id.state_id">
                                    - <t t-esc="company_id.state_id.name"/>
                                </t>
                                <t t-if="company_id.zip">
                                    - <t t-esc="company_id.zip"/>
                                </t>
                            </p>
                        </div>
                    </t>
                </div>
            </div>
            <div class="row">
                <table class="table table-sm o_main_table table-bordered">
                    <thead>
                        <tr style='background-color: #4230B2;color: white;text-align: center;'>
                            <th scope="col">MYSM Number</th>
                            <th scope="col">DESCRIPTION</th>
                            <th scope="col">QTY</th>
                            <th scope="col">Units</th>
                            <th scope="col">UNIT PRICE</th>
                            <th scope="col">GST</th>
                            <th scope="col">TOTAL</th>
                        </tr>
                    </thead>
                    <t t-set="subtotal" t-value="0"/>
                    <tbody>
                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <tr>
                                <td ><t t-esc="line.mysm_number"/></td>
                                <td><t t-esc="line.name"/></td>
                                <td class='text-center'><t t-esc='line.quantity'/></td>
                                <td class='text-center'><t t-esc='line.product_uom_id.name'/></td>
                                <td class='text-center'><t t-esc='line.price_unit'/></td>
                                <td>
                                    <t t-set="taxes" t-value='line.tax_ids'/>
                                    <t t-esc="', '.join(taxes.mapped('name'))"/>
                                </td>
                                <td><t t-esc='line.price_subtotal' t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/></td>
                            </tr>
                        </t>
                        <t t-set='amount' t-value="json.loads(o.tax_totals_json)"/>

                        <tr class='table-borderless'>
                            <td colspan='3'></td>
                            <td colspan='3'>
                                <p class="mb-0"><b>SUBTOTAL</b></p>
                                <p class="mb-0"><b>TAX</b></p>
                                <p class="mb-0"><b>TOTAL</b></p>
                            </td>
                            <td>
                                <p class="mb-0"><t t-esc="amount['amount_untaxed']" t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/></p>
                                <p class="mb-0"><t t-esc="o.amount_total - amount['amount_untaxed']" 
                                    t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/></p>
                                <p class="mb-0"><t t-esc='o.amount_total' t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/></p>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="page-break-after:auto"/>
            <div class="row" style="page-break-before: auto;page-break-inside: avoid;">
                <div class='col-8'>
                    <table class="table table-sm o_main_table table-bordered">
                        <thead>
                            <tr style='background-color: #969696'>
                                <th>
                                    Comments or Special Intructions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="o.narration" class='mb-0'/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <t t-set="company" t-value="env.company"/>
            <div class="row pt-2">
                <table class="table-borderless table table-sm o_main_table" style="width:80%;margin-left: auto;margin-right: auto">
                    <thead>
                        <tr>
                            <td>
                                <div style="margin-left:50px">
                                    <p class="mb-0"> Please make payments to our account: </p>
                                    <p class="mb-0">Name of Account: <t t-esc="company.bank_account_id.acc_holder_name"/></p>
                                    <div class="row">
                                        <div class="col-4">
                                            <p class="mb-0">BSB: <t t-esc="company.bsb"/></p>
                                        </div>
                                        <div class="col-8">
                                            <p class="mb-0">Account: <t t-esc="company.bank_account_id.acc_number"/></p>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div style="margin-left:0px;margin-top:0px">
                                    <img src="/mysm_inventory/static/src/img/payment_method.png" class="d-block mx-auto" alt="Payment Method" width="250px"/>
                                    <a class="mb-0 ml-5" t-att-href="company.payment_gateway" target="_new"> View and pay online now </a>
                                </div>
                            </td>
                            <td>
                                <div style="margin-top:0px">
                                    <p class="mb-0">For International payments please use:</p>
                                    <p class="mb-0">SWIFT CODE: <t t-esc="company.bank_account_id.swift_code"/></p>
                                </div>
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <p class="mb-0">All paments made through card transactions will incur 3% service fee</p>
                    <p class="mb-0">Please quote our invoice number as your reference</p>
                </div>
            </div>
        </div>
    </template>

    <template id="mysm_invoice_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="mysm_inventory.mysm_invoice_report_external_layout" t-lang="o.partner_id.lang">
                    <t t-call="mysm_inventory.mysm_report_invoice_document"/>
                </t>
            </t>
        </t>
    </template>


    <template id="mysm_invoice_report_header_layout_standard">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class='container'>
                <div class='row'>
                    <div class='col-4'>
                        <div class="row">
                            <div class="col-3 mb4">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                            </div>
                            <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                        </div>
                        <div t-if="company.logo or company.report_header" class="row zero_min_height">
                            <div class="col-12">
                                <div style="border-bottom: 1px solid black;"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" name="company_address">
                                <div t-field="company.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                            </div>
                        </div>
                    </div>
                    <div class='col-2'/>
                    <div class='col-6'>
                        <div class='row'>
                            <div class='col-12 mb-2 text-center'>
                                <p class='pb-1'><h2 style='color: #4230B2'><b>TAX INVOICE <t t-esc="o.name"></t></b></h2></p>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-6'>
                                <p class='mb-0'><b>Invoice Date: </b><t t-esc="o.invoice_date"/></p>
                            </div>
                            <div class='col-6'>
                            <p class='mb-0'><b>Due Date: </b><t t-esc="o.invoice_date_due"/></p>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-6'>
                                <p class='mb-0'><b>Order No: </b><t t-esc="o.name"/></p>
                            </div>
                            <div class='col-6'>
                                <p class='mb-0'><b>Source: </b><t t-esc="o.payment_reference"/></p>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-6'>
                                <p class='mb-0'><b>Customer Code: </b><t t-esc="o.partner_id.ref"/></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0" />
        </div>
    </template>
    
    <template id="mysm_invoice_report_external_layout">
        <t t-if="not o" t-set="o" t-value="doc" />
        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company" />
            </t>
        </t>
        <t t-call="mysm_inventory.mysm_invoice_report_header_layout_standard">
            <t t-raw="0" />
        </t>
    </template>

    <data>
        <record id="mysm_action_report_mysm_tax_invoice" model="ir.actions.report">
            <field name="name">Tax Invoice Report</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">mysm_inventory.mysm_invoice_report</field>
            <field name="report_file">mysm_inventory.mysm_invoice_report</field>
            <field name="print_report_name">
                (object.state in ('draft', 'sent') and 'Request for Tax Invoice - %s' % (object.name) or
                'Tax Invoice - %s' % (object.name))</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="mysm_inventory.paperformat_purchase_order"></field>
        </record>
    </data>

</odoo>
