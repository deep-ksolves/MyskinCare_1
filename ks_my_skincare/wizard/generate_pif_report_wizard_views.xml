            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="groups_id" eval="[(4,ref('stock.group_stock_user'))]"/>
            <field name="code">
                if records:
                    action = records.generate_report_pif_for_formulation('Internal')
                </field>
        </record>
    </data>
</odoo>