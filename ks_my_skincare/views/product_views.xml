<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_template_component_inherit_view" model="ir.ui.view">
            <field name="name">product.template.component.view.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='allergen_button']" position="before">
                    <button class="oe_stat_button" name="component_button" icon="fa-list-ul" type="object"
                            attrs="{'invisible': [('has_components', '=', False)]}">
                        <field name="has_components" invisible='1'/>
                        <div class="o_field_widget o_stat_info">
                            <span>
                                Components
                            </span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//label[@for='purchase_ok']" position="after">
                    <field name="has_components"/>
                    <label for="has_components">Components</label>
                </xpath>
            </field>
        </record>
    </data>
</odoo>