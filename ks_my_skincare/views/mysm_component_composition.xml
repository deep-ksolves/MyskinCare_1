<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mysm_component_composition_view_tree" model="ir.ui.view">
        <field name="name">mysm.component.composition.view.tree</field>
        <field name="model">mysm.component.composition</field>
        <field name="arch" type="xml">
            <tree string="Components" editable='bottom'>
                <field name="product_id" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="component_id"/>
                <field name="percentage"/>
                <field name="mrp_bom_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="mysm_component_composition_action" model="ir.actions.act_window">
        <field name="name">Product Component Composition</field>
        <field name="res_model">mysm.component.composition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="mysm_products_component_composition_menu"
            name="Component Composition"
            action="mysm_component_composition_action"
            parent="stock.menu_stock_inventory_control"
            sequence="11"/>

</odoo>



