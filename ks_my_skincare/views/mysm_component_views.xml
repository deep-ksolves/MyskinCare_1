<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mysm_component_tree_view" model="ir.ui.view">
        <field name="name">mysm.component.view.tree</field>
        <field name="model">mysm.component</field>
        <field name="arch" type="xml">
            <tree string="" editable='bottom'>
                <field name="name"/>
                <field name="inci_name"/>
                <field name="cas_number"/>
            </tree>
        </field>
    </record>

    <record id="mysm_component_form_view" model="ir.ui.view">
        <field name="name">mysm.component.view.form</field>
        <field name="model">mysm.component</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="inci_name"/>
                        <field name="cas_number"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mysm_component_action" model="ir.actions.act_window">
        <field name="name">Product Components</field>
        <field name="res_model">mysm.component</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
    id="mysm_component_menu"
    name="Product Components"
    action="mysm_component_action"
    parent="stock.menu_stock_config_settings"
    sequence="171"/>

</odoo>
